  <!-- Quote -->
  <section class="quote fade">‚ÄúI create things that people can play and enjoy.‚Äù</section>

  <!-- Extras -->
  <section id="extras" class="fade">
    <h2 class="section-title">üîó Extras</h2>
    <div class="extras-links">
      <a href="mentions.pdf" download>Legal Notice¬†(PDF)</a>
